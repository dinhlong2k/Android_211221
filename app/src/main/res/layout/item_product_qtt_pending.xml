<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/qtt_pending"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="12dp"
        android:textSize="18sp"
        android:text="1"/>

    <TextView
        android:id="@+id/x_symbol"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/qtt_pending"
        android:layout_height="wrap_content"
        android:textStyle=""
        android:textColor="@color/black"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:text="x"/>

    <TextView
        android:id="@+id/productName_pending"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/x_symbol"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="12dp"
        android:textSize="16sp"
        android:text="Apple Watch"/>



</androidx.constraintlayout.widget.ConstraintLayout>