<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/admin_available_product_view">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/available_product_descrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/delete_item"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"

            android:src="@drawable/ic_delete"
            app:tint="@color/deleteOrange" />

        <ImageView
            android:id="@+id/available_product_img"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:padding="3dp"
            android:background="@drawable/admin_available_product_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/available_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SamSung Galaxy Watch"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/available_product_img"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:id="@+id/available_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120 $"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/available_product_name"
            app:layout_constraintLeft_toRightOf="@id/available_product_img"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <ImageView
        android:id="@+id/grayView"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/available_product_descrip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:background="#C0C0C0"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/grayView"
        android:paddingBottom="4dp"
        >

        <TextView
            android:id="@+id/available_product_qtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="62 Pcs"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="12dp"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trong Kho"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#838383"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/available_product_qtt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="8dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>